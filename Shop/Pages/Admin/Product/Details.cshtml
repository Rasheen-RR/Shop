@page
@model Shop.Pages.Admin.Product.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Products</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.productName)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.image)
        </dd>
        <dt class="col-sm-2">
            Categorie ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.categories.categoryID)
        </dd>
        <dt class="col-sm-2">
            Supplier ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.suppliers.supplierID)
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.quantityPerLabel)
        </dd>
        <dt class="col-sm-2">
            Unit Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.unitPrice)
        </dd>
        <dt class="col-sm-2">
            Units in Stock
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.unitsInStock)
        </dd>
        <dt class="col-sm-2">
            Units in Order
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.unitsOnOrder)
        </dd>
        <dt class="col-sm-2">
            Recorder Level
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.recorderLevel)
        </dd>
        <dt class="col-sm-2">
            Discontinued
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Products.discontinued)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Products.productID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
