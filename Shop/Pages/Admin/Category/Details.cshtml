@page
@model Shop.Pages.Admin.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Categories</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.categoryName)
        </dd>
        <dt class="col-sm-2">
            Description
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.description)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.picture)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Categories.categoryID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
