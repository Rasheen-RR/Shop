@page
@model Shop.Pages.Admin.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Categories</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.categoryName)
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.description)
        </dd>
        <dt class="col-sm-2">
           Image
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categories.picture)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Categories.categoryID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
